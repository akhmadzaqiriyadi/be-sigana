# Server Configuration
NODE_ENV=development
PORT=3000

# Database Connection
# Format: postgresql://USER:PASSWORD@HOST:PORT/DB_NAME?schema=public
DATABASE_URL="postgresql://johndoe:randompassword@localhost:5432/mydb?schema=public"

# JWT Auth Configuration
JWT_SECRET="changeme_to_complex_secret"
JWT_EXPIRES_IN="1d"

# Security & CORS
# In production, set this to your frontend domain (e.g., https://myapp.com)
CORS_ORIGIN="*"

# Logging
# Options: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# App Configuration
APP_URL="http://localhost:3000"

# Email Service (SMTP)
# Using Resend SMTP as example
SMTP_HOST="smtp.resend.com"
SMTP_PORT=465
SMTP_USER="resend"
SMTP_PASSWORD="re_YOUR_API_KEY"
SMTP_FROM_EMAIL="noreply@sigana.id"
PASSWORD_RESET_EXPIRES_IN="1h"

# Flexibility for future SMTP migration
EMAIL_PROVIDER="smtp"
